generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Criminal {
  id             String   @id @default(uuid()) @db.Uuid()
  name           String   @db.VarChar(250)
  dateOfBirth    DateTime @map("date_of_birth") @db.Date
  cpf            String   @unique @db.Char(11)
  rg             String   @unique @db.Char(9)
  criminalRecord String   @unique @map("criminal_record") @db.VarChar(100)
  nationality    String   @db.VarChar(100)
  gender         String?
  address        String?
  recidivist     Boolean  @db.Boolean
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamp()
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at")
  Crime          Crime[]

  @@map("criminals")
}

model Crime {
  id               String        @id @default(uuid()) @db.Uuid()
  status           StatusOffense @default(Aguardando_investigar)
  dateOfOccurrence DateTime      @map("date_of_occurrence") @db.Timestamp()
  caseNumber       Int           @unique @map("case_number") @db.Integer
  priority         TypePriority  @default(baixa)
  witnesses        String?       @db.Text
  motivation       String?       @db.Text
  criminalId       String        @map("criminal_id") @db.Uuid
  criminal         Criminal      @relation(fields: [criminalId], references: [id])
  createdAt        DateTime      @default(now()) @map("created_at") @db.Timestamp()
  updatedAt        DateTime      @default(now()) @updatedAt @map("updated_at")

  Guns Gun[]

  @@map("crimes")
}

model Gun {
  id               String       @id @default(uuid()) @db.Uuid()
  serialNumber     String       @unique @map("serial_number") @db.Char(12)
  registrationCode String       @unique @map("registration_code") @db.Char(12)
  type             TypeGun      @default(undefined)
  caliber          TypeCaliber? @default(undefined)
  state            TypeState    @default(in_possession)
  crimesId         String       @map("crimes_id") @db.Uuid
  crime            Crime        @relation(fields: [crimesId], references: [id])
  createdAt        DateTime     @default(now()) @map("created_at") @db.Timestamp()
  updatedAt        DateTime     @default(now()) @updatedAt @map("updated_at")

  @@map("guns")
}

enum TypeGun {
  firearm
  bladed_weapon
  improvised_weapons
  undefined
}

enum TypeCaliber {
  Ponto_22
  Ponto_38
  Nove_milimetros
  undefined
}

enum TypeState {
  in_possession
  confiscated
}

enum TypePriority {
  baixa
  media
  alta
}

enum StatusOffense {
  Aguardando_investigar
  Em_Andamento
  Resolvido
  Arquivado
}
